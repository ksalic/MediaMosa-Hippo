<?xml version="1.0" encoding="UTF-8"?>
<!--
  Plugin configuration
  
  All configuration is stored in the repository. This file collects
  all separate XML configuration files for the different plugins
  to initialize this repository stored configuration at first startup.
   
  -->
<sv:node xmlns:sv="http://www.jcp.org/jcr/sv/1.0"
         sv:name="hippo:initialize">

  <sv:property sv:name="jcr:primaryType" sv:type="Name">
    <sv:value>hippo:initializefolder</sv:value>
  </sv:property>

  <sv:node sv:name="hippoexternal-reports-synchronization">
    <sv:property sv:name="jcr:primaryType" sv:type="Name">
      <sv:value>hippo:initializeitem</sv:value>
    </sv:property>
    <sv:property sv:name="hippo:sequence" sv:type="Double">
      <sv:value>10128.501</sv:value>
    </sv:property>
    <sv:property sv:name="hippo:contentresource" sv:type="String">
      <sv:value>synchronization-reports.xml</sv:value>
    </sv:property>
    <sv:property sv:name="hippo:contentroot" sv:type="String">
      <sv:value>/hippo:configuration/hippo:frontend/cms</sv:value>
    </sv:property>
  </sv:node>

  <sv:node sv:name="hippoexternal-reports-statistics">
    <sv:property sv:name="jcr:primaryType" sv:type="Name">
      <sv:value>hippo:initializeitem</sv:value>
    </sv:property>
    <sv:property sv:name="hippo:sequence" sv:type="Double">
      <sv:value>10128.502</sv:value>
    </sv:property>
    <sv:property sv:name="hippo:contentresource" sv:type="String">
      <sv:value>statistics-reports.xml</sv:value>
    </sv:property>
    <sv:property sv:name="hippo:contentroot" sv:type="String">
      <sv:value>/hippo:configuration/hippo:frontend/cms</sv:value>
    </sv:property>
  </sv:node>


</sv:node>
